
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Account/_FapsPage.cshtml";
}

<body>
    <h1>FAPS </h1>
    <div class="clear-loading spinner">
        <span></span>
    </div>
    <div class="w3ls-login box box--big">
        <!-- form starts here -->
        <form action="Verify" method="post">
            <div class="agile-field-txt">
                <label><i class="fa fa-user" aria-hidden="true"></i> Usuario </label>
                <input type="text" name="Usuario" placeholder="Entre com seu login" id="Name" required="" value="teste_admin"/>
            </div>
            <div class="agile-field-txt">
                <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> Senha </label>
                <input type="password" name="Senha" placeholder="Entre com sua senha" required="" id="myInput"  value="teste"/>
                <div class="agile_label">
                    <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                    <label class="check" for="check3">Mostrar Senha</label>
                </div>
                <div class="agile-right">
                    <a href="#">Esqueceu sua Senha?</a>
                </div>
            </div>
            <!-- script for show password -->
            <script>
				function myFunction() {
					var x = document.getElementById("myInput");
					if (x.type === "password") {
						x.type = "text";
					} else {
						x.type = "password";
					}
				}
            </script>
            <!-- //end script -->
            <input type="submit" value="LOGIN">
        </form>
    </div>
    <!-- //form ends here -->
    <!--copyright-->
    <div class="copy-wthree">
        <p>
            © 2020 Ferramenta Auxiliar para Processos Seletivos . All Rights Reserved
        </p>
    </div>
    <!--//copyright-->
</body>